<body>
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<a href="/" class="navbar-brand" id="wired">WIRED Scraper</a>
			</div>
			<ul class="nav navbar-nav">
				<li class="active">
					<a href="/articles" id="home">Home</a>
				</li>
				<li>
					<a href="/saved" id="savedArticles">Saved Articles</a>
				</li>
				<li>
					<a class="btn btn-danger" id=scrape>SCRAPE NEW ARTICLES!</a>
				</li>
			</ul>
		</div>
	</nav>
	<div class="jumbotron text-center">
		<div class="background-image"></div>
		<div class="caption">
			<h1>Mongo Scraper</h1>
			<p>WIRED Edition</p>
		</div>
	</div>

	<div class="container-fluid article-results">
		{{#each data}}
		<div class="panel panel-default">
			<div class="panel-heading">
				<a class="panel-title" href="https://www.wired.com{{link}}" target="_blank">{{title}}</a>
				<div class="btn-group pull-right">
					<a href="#" class="btn btn-default btn-sm delete" data-id={{id}}>DELETE FROM SAVED</a>
					<a href="#" data-toggle="modal" data-target="#myModal" class="btn btn-default btn-sm note" data-id={{id}}>ADD NOTE</a>
				</div>

			</div>
			<div class="panel-body">
				{{summary}}
			</div>
		</div>
		{{/each}}
	</div>

	<div class="bootbox modal hide fade in" tabindex="-1" role="dialog" style="display: block;">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body"><button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true" style="margin-top: -10px;">Ã—</button>
					<div class="bootbox-body">
						<div class="container-fluid text-center">
							<h4>Notes For Article: <span id="noteID"></span></h4>
							<hr>
							<ul class="list-group note-container">
								<li class="list-group-item defualt">No notes for this article yet.</li>
							</ul><textarea id="noteText" placeholder="New Note" rows="4" cols="60"></textarea><button class="btn btn-success" id="saveNote" data-noteid="">Save Note</button></div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="app.js"></script>
</body>
